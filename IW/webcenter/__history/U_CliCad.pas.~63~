  ATag: TIWHTMLTag);
begin
  inherited;


  ATag.Add(' style="text-align:right" ');
  ATag.Add('placeholder="Informe um CPF válido"');
  ATag.Add('data-inputmask="''mask'': ''999.999.999-99''" data-mask');


end;

end.
