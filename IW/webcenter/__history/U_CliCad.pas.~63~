procedure TFormCliCad.EDIT_COD_CLIENTE_PJHTMLTag(ASender: TObject;
  ATag: TIWHTMLTag);
begin
  inherited;
   ATag.Add('placeholder="Informe um CNPJ válido"');
   ATag.Add(' style="text-align:right" ');
   ATag.Add('data-inputmask="''mask'': ''99.999.999/9999-99''" data-mask');

end;

